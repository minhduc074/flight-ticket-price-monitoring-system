# Server Configuration
PORT=3000
NODE_ENV=development

# Prisma Postgres Configuration (Prisma Accelerate)
# PRISMA_DATABASE_URL is used for Prisma Client connections (with Accelerate)
# DATABASE_URL is used for direct database connections (migrations, etc.)
DATABASE_URL="postgres://user:password@db.prisma.io:5432/postgres?sslmode=require"
POSTGRES_URL="postgres://user:password@db.prisma.io:5432/postgres?sslmode=require"
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-api-key"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Admin Credentials
ADMIN_EMAIL=admin@flyticket.com
ADMIN_PASSWORD=admin123456

# Flight API Keys (Optional - for real flight data)
# SerpAPI - Google Flights data (100 free searches/month)
# Sign up at: https://serpapi.com/
SERPAPI_KEY=your-serpapi-key

# FlightAPI.io - Flight search API
# Sign up at: https://www.flightapi.io/
FLIGHTAPI_KEY=your-flightapi-key

# RapidAPI - For Skyscanner API access
# Sign up at: https://rapidapi.com/
RAPIDAPI_KEY=your-rapidapi-key
