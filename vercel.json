{
  "version": 2,
  "buildCommand": "cd server && npm install --production=false",
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/src/**", "server/public/**"],
        "packagePath": "server/package.json"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "server/public/admin.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
